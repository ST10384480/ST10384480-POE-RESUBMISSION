<Window x:Class="RecipeApp.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="400" Width="600">
    <StackPanel>
        <TextBox Name="RecipeNameTextBox" Text="Recipe Name" GotFocus="RemoveText" LostFocus="AddText"/>
        <TextBox Name="IngredientNameTextBox" Text="Ingredient Name"/>
        <TextBox Name="IngredientQuantityTextBox" Text="Quantity"/>
        <TextBox Name="IngredientUnitTextBox" Text="Unit"/>
        <TextBox Name="IngredientCaloriesTextBox" Text="Calories per Unit"/>
        <TextBox Name="IngredientFoodGroupTextBox" Text="Food Group"/>
        <TextBox Name="StepDescriptionTextBox" Text="Step Description"/>
        <Button Content="Add Ingredient" Click="AddIngredient_Click" />
        <Button Content="Add Step" Click="AddStep_Click" />
        <Button Content="Save Recipe" Click="SaveRecipe_Click" />
    </StackPanel>
</Window>