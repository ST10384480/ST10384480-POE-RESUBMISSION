<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Add Recipe" Click="AddRecipe_Click" />
            <Button Content="Display Recipe" Click="DisplayRecipe_Click" />
            <Button Content="List Recipes" Click="ListRecipes_Click" />
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" />
            <ListBox Name="RecipeListBox" Height="200" />
        </StackPanel>
    </Grid>
</Window>